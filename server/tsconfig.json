{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"] // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
    },
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}