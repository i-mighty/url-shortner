{
  "name": "url-shortner",
  "version": "1.0.0",
  "description": "Simple Url shortner",
  "main": "src/index.ts",
  "scripts": {
    "server-build": "cd ./server && yarn build",
    "server-start": "cd ./server && yarn start",
    "server-dev": "cd ./server && yarn run dev",
    "app-dev": "cd ./app && yarn run serve",
    "app-install": "cd ./app && yarn",
    "server-install": "cd ./server && yarn",
    "install": "yarn run app-install && yarn run server-install",
    "app-test": "cd ./app && yarn run test:unit",
    "server-test": "cd ./server && yarn run test",
    "test": "yarn run app-test && yarn run server-test"
  }
}
